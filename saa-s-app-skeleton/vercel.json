{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_API_URL": {
      "default": "https://your-project-name.vercel.app"
    },
    "NEXT_PUBLIC_MCP_ENDPOINT": {
      "default": "/api/tools"
    }
  },
  "functions": {
    "app/api/**": {
      "runtime": "nodejs@20.x"
    }
  },
  "github": {
    "enabled": true,
    "autoAlias": true
  }
}
